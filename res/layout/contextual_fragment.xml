<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/car_grey_800"
    app:cardCornerRadius="@dimen/launcher_card_corner_radius"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/car_padding_3"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/car_padding_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Car.Body1.Light"
            app:layout_constraintStart_toEndOf="@+id/weather_image"
            app:layout_constraintTop_toTopOf="@+id/parent"/>

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/car_padding_4"
            android:layout_marginTop="@dimen/car_padding_1"
            android:textAppearance="@style/TextAppearance.Car.Body1.Light"
            app:layout_constraintStart_toEndOf="@+id/weather_image"
            app:layout_constraintTop_toBottomOf="@+id/greeting"/>

        <TextView
            android:id="@+id/weather_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" |  "
            android:textAppearance="@style/TextAppearance.Car.Body1.Light"
            android:textColor="@color/car_grey_50"
            app:layout_constraintStart_toEndOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/temperature"/>

        <com.android.car.carlauncher.LocalizedTextClock
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="@string/date"
            android:format24Hour="@string/date"
            android:textAppearance="@style/TextAppearance.Car.Body1.Light"
            app:layout_constraintStart_toEndOf="@+id/weather_divider"
            app:layout_constraintTop_toTopOf="@+id/weather_divider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
